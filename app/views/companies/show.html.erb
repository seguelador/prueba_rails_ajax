<p id="notice"><%= notice %></p>

<h1><%= @company.name %></h1>

<br><br>

<h3>Listing comments for <%= @company.name %></h3>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody id="table-comment">
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Add a comment for <%= @company.name %></h3>
  </div>
  <div class="panel-body">
    <form action="<%= add_comment_companies_path %>" method="post" data-remote="true">
    	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    	<textarea name="text"></textarea>
    	<input type="hidden" name="id" value="<%= params[:id] %>">
    	<br><br>
    	<button type="submit" class="btn btn-default">Add comment</button>
    </form>
  </div>
</div>

<hr>

<%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-default' %>
<%= link_to 'Back', companies_path, class: 'btn btn-default' %>
